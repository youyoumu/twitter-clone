<h1>User show</h1>
<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar, alt: 'current_user.avatar' %>
<% else %>
  <h2>No Avatar</h2>
<% end %>
<p>User id: <%= @user.id %></p>
<p>User username: <%= @user.username %></p>
<% if current_user.following.include?(@user) %>
  <p>Following</p>
<% end %>
<div>
  <span><%= @user.following.count %> <%= link_to 'Following', user_following_path(@user) %></span>
  <span><%= @user.followers.count %> <%= link_to 'Followers', user_followers_path(@user) %></span>
  <span><%= @user.likes.count %> <%= link_to 'Likes', user_likes_path(@user) %></span>
</div>
<%= form_with url: user_follow_path(@user), model: @user, local: true, method: :post do |f|%>
  <%= f.submit "Follow" %>
<% end %>
<%= form_with url: user_follow_path(@user), model: @user, local: true, method: :delete do |f|%>
  <%= f.submit "Unfollow" %>
<% end %>
<% unless @user.tweets.empty? %>
  <h2>Tweets</h2>
  <%= render  partial: "tweets/tweet", collection: @user.tweets, as: :tweet, locals: {likes_count: @likes_count} %>
<% else %>
  <h2>No Tweets</h2>
<% end %>