<h1>User show</h1>
<p>User id: <%= @user.id %></p>
<p>User email: <%= @user.email %></p>
<% if current_user.followings.include?(@user) %>
  <p>following</p>
<% end %>
<%= form_with url: user_follow_path(@user), model: @user, local: true, method: :post do |f|%>
  <%= f.submit "Follow" %>
<% end %>
<%= form_with url: user_follow_path(@user), model: @user, local: true, method: :delete do |f|%>
  <%= f.submit "Unfollow" %>
<% end %>