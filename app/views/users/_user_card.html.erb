<div class="card mb-2">
  <div class="card-body d-flex">
    <div class="me-3">
      <% if user.avatar.attached? %>
        <%= image_tag user.avatar.variant(resize_to_limit: [64, 64]).processed, alt: 'user_avatar', height: '64px', width: '64px', style: "object-fit: cover", class: "rounded-circle" %>
      <% else %>
        <%= image_tag "no_avatar.svg", alt: 'no_avatar.svg', height: '64', width: '64', style: "object-fit: cover", class: "rounded-circle" %>
      <% end %>
    </div>
    <%= link_to user.username, user_path(user), class: "fs-3" %>
  </div>
</div>